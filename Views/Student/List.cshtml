                            <a asp-controller="Student" asp-action="Remove" asp-route-id="@student.Id" 
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
